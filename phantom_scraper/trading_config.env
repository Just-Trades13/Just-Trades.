# TradingView to Tradovate Automated Trading Configuration
# Copy this file to .env and fill in your credentials

# Tradovate Login Credentials
TRADOVATE_USERNAME=your_tradovate_email@example.com
TRADOVATE_PASSWORD=your_tradovate_password

# Webhook Server Configuration
WEBHOOK_HOST=0.0.0.0
WEBHOOK_PORT=5000
WEBHOOK_DEBUG=false

# Trading Configuration
DEFAULT_QUANTITY=1
MAX_QUANTITY=10
RISK_PERCENTAGE=2.0

# Browser Configuration
HEADLESS_MODE=true
BROWSER_TIMEOUT=30

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=trading_bot.log

# Security (Optional - for webhook authentication)
WEBHOOK_SECRET=your_webhook_secret_key_here
